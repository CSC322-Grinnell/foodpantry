<!-- Example row of columns -->
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Food Items in Need</h1>

<table class="table table-striped">
  <tr>
    <th>Name</th>
  </tr>

<% @food_items.each do |food_item| %>
  <tr>
    <% if food_item.needPriority > 0 %>
    <td><%= food_item.name %></td>
    <% end %>
  </tr>
<% end %>
</table>

<h1>Accepted Food Items</h1>

<table class="table table-striped">
  <tr>
    <th>Name</th>
  </tr>

<% @food_items.each do |food_item| %>
  <tr>
    <td><%= food_item.name %></td>
  </tr>
<% end %>
</table>

<br />
  </div>
</div>

